int[] arr = {-4, -1, 0, 3, 10};
int n = arr.length;

int[] result = new int[n];
int left = 0, right = n - 1;
int index = n - 1;

while (left <= right) {
    int leftSq = arr[left] * arr[left];
    int rightSq = arr[right] * arr[right];

    if (leftSq > rightSq) {
        result[index--] = leftSq;
        left++;
    } else {
        result[index--] = rightSq;
        right--;
    }
}
