int[] arr = {2, 1, 5, 1, 3, 2};
int K = 3;

int windowSum = 0;
for (int i = 0; i < K; i++) {
    windowSum += arr[i];
}

int maxSum = windowSum;

for (int i = K; i < arr.length; i++) {
    windowSum += arr[i];      // add next
    windowSum -= arr[i - K]; // remove previous
    maxSum = Math.max(maxSum, windowSum);
}

System.out.println(maxSum);
