String s = "ADOBECODEBANC";
String t = "ABC";

//frequency of characters in t
HashMap<Character, Integer> need = new HashMap<>();
for (char c : t.toCharArray()) {
    need.put(c, need.getOrDefault(c, 0) + 1);
}

//frequency in current window
HashMap<Character, Integer> window = new HashMap<>();

int required = need.size(); //number of unique chars in t
int formed = 0;  //how many required chars are satisfied in window

int left = 0, right = 0;
int minLen = Integer.MAX_VALUE; //length of the smallest valid window found so far
int minLeft = 0; //starting index of that smallest window

while (right < s.length()) {
    char c = s.charAt(right);
    window.put(c, window.getOrDefault(c, 0) + 1);

    if (need.containsKey(c) &&
        window.get(c).intValue() == need.get(c).intValue()) {
        formed++;
    }

    // try to shrink window
    while (left <= right && formed == required) {
        if (right - left + 1 < minLen) {
            minLen = right - left + 1;
            minLeft = left;
        }

        char leftChar = s.charAt(left);
        window.put(leftChar, window.get(leftChar) - 1);

        if (need.containsKey(leftChar) &&
            window.get(leftChar) < need.get(leftChar)) {
            formed--;
        }

        left++;
    }

    right++;
}

if (minLen == Integer.MAX_VALUE)
    System.out.println("");
else
    System.out.println(s.substring(minLeft, minLeft + minLen));
