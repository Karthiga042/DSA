String s = "abciiidef";
int k = 3;

int count = 0;

// first window
for (int i = 0; i < k; i++) {
    if ("aeiou".indexOf(s.charAt(i)) != -1) {
        count++;
    }
}

int maxVowels = count;

// slide window
for (int i = k; i < s.length(); i++) {
    if ("aeiou".indexOf(s.charAt(i)) != -1)
        count++;
    if ("aeiou".indexOf(s.charAt(i - k)) != -1)
        count--;

    maxVowels = Math.max(maxVowels, count);
}

System.out.println(maxVowels);
