int[] arr = {1, 0, 1, 1, 0, 1};
int k = 3;

int count = 0;

// first window
for (int i = 0; i < k; i++) {
    if (arr[i] == 1)
        count++;
}

int maxOnes = count;

// slide window
for (int i = k; i < arr.length; i++) {
    if (arr[i] == 1)
        count++;
    if (arr[i - k] == 1)
        count--;

    maxOnes = Math.max(maxOnes, count);
}

System.out.println(maxOnes);
