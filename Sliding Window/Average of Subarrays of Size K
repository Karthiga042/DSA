int[] arr = {1, 3, 2, 6, -1, 4, 1, 8, 2};
int K = 5;

int windowSum = 0;

for (int i = 0; i < K; i++) {
    windowSum += arr[i];
}

System.out.println(windowSum / (double)K);

for (int i = K; i < arr.length; i++) {
    windowSum += arr[i];
    windowSum -= arr[i - K];
    System.out.println(windowSum / (double)K);
}
